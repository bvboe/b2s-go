{
  "name": "bjorn2scan-web",
  "version": "1.0.0",
  "description": "Web UI for bjorn2scan",
  "private": true,
  "type": "module",
  "scripts": {
    "lint": "npm run lint:html && npm run lint:css && npm run lint:js",
    "lint:html": "htmlhint --config .htmlhintrc ../static/*.html",
    "lint:css": "stylelint --config .stylelintrc.json '../static/*.css'",
    "lint:js": "cd .. && eslint --config web/eslint.config.js static/*.html",
    "lint:fix": "npm run lint:css -- --fix"
  },
  "devDependencies": {
    "eslint": "^10.0.1",
    "eslint-plugin-html": "^8.1.4",
    "globals": "^17.3.0",
    "htmlhint": "^1.1.4",
    "stylelint": "^17.1.0",
    "stylelint-config-standard": "^40.0.0"
  }
}
